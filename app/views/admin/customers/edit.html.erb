<h1>会員情報編集</h1>
<%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
    <div>
      <div>
        <%= f.label :"会員ID"" %>
        <%= f.label :"#{@customer.id}" %>
      </div>
      <div>
        <%= f.label :"氏名" %>
        <%= f.text_field :last_name %>　
        <%= f.text_field :first_name %>
      </div>

      <div>
        <%= f.label :"フリガナ" %>
        <%= f.text_field :kana_last_name %>
        <%= f.text_field :kana_first_name %>
      </div>
      
      <div>
        <%= f.label :"郵便番号" %>
        <%= f.text_field :postal_code, class: "col-sm-3" %>
      </div>
      
      <div>
        <%= f.label :"住所" %>
        <%= f.text_field :address, class: "col-sm-7" %>
      </div>
      
      <div>
        <%= f.label :"電話番号" %>
        <%= f.text_field :phone_number, class: "col-sm-4" %>
      </div>
      
      <div>
        <%= f.label :"メールアドレス" %>
        <%= f.text_field :email, class: "col-sm-6" %>
      </div>

      <div>
        <%= f.label :"会員ステータス" %>
        　<%= f.radio_button :is_deleted, false %>
        　<%= f.label :is_deleted, "有効"%>
        　<%= f.radio_button :is_deleted, true %>
        　<%= f.label :is_deleted, "退会" %>
      </div>
    </div>
      <div>
        <%= f.submit '変更を保存する' ,class: "btn btn-success" %>
        <%= link_to '会員詳細画面へ戻る',admin_customer_path %>
      </div>

  <% end %>